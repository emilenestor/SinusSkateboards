@page
@model SinusSkateboards.UI.Pages.Admin.Products.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ProductModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductModel.Id" />
            <input type="hidden" asp-for="ProductModel.ImagePath" />
            <div class="form-group">
                <label asp-for="Photo" class="control-label"></label>
                <input type="file" asp-for="Photo" class="form-control" accept=".jpg,.jpeg" />
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductModel.Title" class="control-label"></label>
                <input asp-for="ProductModel.Title" class="form-control" />
                <span asp-validation-for="ProductModel.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductModel.Description" class="control-label"></label>
                <textarea asp-for="ProductModel.Description" class="form-control"></textarea>
                <span asp-validation-for="ProductModel.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductModel.Colour" class="control-label"></label>
                <input asp-for="ProductModel.Colour" class="form-control" />
                <span asp-validation-for="ProductModel.Colour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Category" class="control-label">Category</label>
                <select asp-for="@Model.ChosenCategory" class="form-control" aria-label="Category">
                    @foreach (var category in @Model.Categories)
                    {
                        if (@category.Id != Model.ProductModel.CategoryId)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                        else
                        {
                            <option selected value="@category.Id">@category.Name</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="ProductModel.Price" class="control-label"></label>
                <input asp-for="ProductModel.Price" class="form-control" />
                <span asp-validation-for="ProductModel.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
