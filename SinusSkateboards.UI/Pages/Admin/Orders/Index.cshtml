@page
@model SinusSkateboards.UI.Pages.Admin.Orders.IndexModel
@{
}
<table class="table">
    <thead>
        <tr>
            <th>
                Order Id
            </th>
            <th>
                Order Date
            </th>
            <th>
                Details
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Orders)
        {
            <tr>
                <td>
                    @order.Id
                </td>
                <td>
                    @order.OrderDate
                </td>
                <td>
                    <a asp-page="./Details" asp-route-id="@order.Id">Details</a>
                </td>                
            </tr>
        }
    </tbody>
</table>
