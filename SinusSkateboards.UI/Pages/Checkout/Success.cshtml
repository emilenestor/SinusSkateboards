@page
@model SinusSkateboards.UI.Pages.Checkout.SuccessModel
@{
}
<div class="h1 text-center mt-5">Thank you for you order, @Model.Order.Customer.Name!</div>
<div class="h2 text-center m-3">Your Order Number is #@Model.Order.Id</div>
<div class="row d-flex justify-content-center">
    <div class="m-1">
        <div class="h3 m-1">Ordered Items:</div>
        @foreach (var product in Model.Order.OrderedProducts)
        {
            <div class="h3 m-1">@product.Quantity x @product.Product.Title // @product.Product.Colour</div>
        }
    </div>
</div>